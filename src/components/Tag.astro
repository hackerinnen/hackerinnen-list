---
export interface TagProps {
  key: String;
  group: String;
}

const { key, group } = Astro.props as TagProps;
---

<span
  class="tag is-primary is-light is-family-monospace"
  data-filter={key}
  data-group={group}
>
  <slot />
</span>

<style lang="scss">
  .tag {
    cursor: pointer;
  }

  .tag:hover {
    background-color: white !important;
  }
</style>
